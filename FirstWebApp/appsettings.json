{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Services": {
    "ISecondServiceClient": {
      "BaseUrl": "https://localhost:5002/api",
      "TimeoutSeconds": "30"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Using": [
      "Serilog.Sinks.ColoredConsole",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.Elasticsearch"
    ],
    "WriteTo": [
      {
        "Name": "ColoredConsole"
      },
      {
        "Name": "Seq",
        "Args":
        {
          "serverUrl": "http://192.168.99.100:8080"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://192.168.99.100:9200",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv6",
          "overwriteTemplate": true,
          "templateName": "api-local",
          "indexFormat": "api-local-{0:yyyy-MM-dd}",
          "connectionGlobalHeaders": "Authorization=Basic a2liYW5hcm86a2liYW5hcm8="
        }
      }
    ]
  },
  "SelfLog" : {
    "Serilog": {
      "MinimumLevel": {
        "Default": "Debug"
      },
      "Using": [
        "Serilog.Sinks.Console",
        "Serilog.Sinks.Elasticsearch"
      ],
      "WriteTo": [
        {
          "Name": "Console"
        },
        {
          "Name": "Elasticsearch",
          "Args": {
            "nodeUris": "http://192.168.99.100:9200",
            "autoRegisterTemplate": true,
            "autoRegisterTemplateVersion": "ESv6",
            "overwriteTemplate": true,
            "templateName": "api-selflog-local",
            "indexFormat": "api-selflog-local-{0:yyyy-MM-dd}",
            "connectionGlobalHeaders": "Authorization=Basic a2liYW5hcm86a2liYW5hcm8=",
            "emitEventFailure": 0
          }
        }
      ]
    }
  }
}
